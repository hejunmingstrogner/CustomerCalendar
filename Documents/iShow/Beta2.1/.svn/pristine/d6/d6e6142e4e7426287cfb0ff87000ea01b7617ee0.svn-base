#import "MpFaceGenerator.h"
#import "MpMovie.h"
#import <UIKit/UIKit.h>

@interface MpMovieHelper : NSObject

/**
 * Create faceImg object from UIImage. faceImg is used to generate face.
 *
 * @param image  UIImage.
 * @return       faceImage object to be used to generate face data.
 */
+ (motionportrait::MpFaceGenerator::FaceImg*)createFaceImg:(UIImage *)image;

/**
